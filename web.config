<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Node.js application handler for API -->
      <add name="iisnode" path="api.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Static file MIME types -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>

    <!-- Default documents -->
    <defaultDocument>
      <files>
        <clear />
        <add value="public/index.html" />
        <add value="index.js" />
      </files>
    </defaultDocument>

    <!-- Directory browsing disabled -->
    <directoryBrowse enabled="false" />

    <rewrite>
      <rules>
        <!-- API routes - direct to Node.js -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="api.js/{R:1}" />
        </rule>

        <!-- Static assets - serve directly with proper MIME types -->
        <rule name="Static Assets" stopProcessing="true">
          <match url="^assets/.*" />
          <action type="Rewrite" url="public/{R:0}" />
        </rule>

        <!-- Static files from dist/public - serve directly -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^public/.*" />
          <action type="None" />
        </rule>

        <!-- Root request - serve React app -->
        <rule name="Root to React" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="public/index.html" />
        </rule>

        <!-- All other routes - serve index.html for React Router -->
        <rule name="React Router">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{URL}" pattern="^/api/" negate="true" />
            <add input="{URL}" pattern="^/assets/" negate="true" />
            <add input="{URL}" pattern="^/" negate="true" />
          </conditions>
          <action type="Rewrite" url="public/index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode configuration -->
    <iisnode 
      nodeProcessCommandLine="C:\Program Files\nodejs\node.exe"
      interceptor="C:\Program Files\iisnode\interceptor.js"
      promoteServerVars="LOGON_USER,AUTH_USER,AUTH_TYPE"
      loggingEnabled="true"
      logDirectory="logs"
      debuggingEnabled="false"
      maxProcessCountPerApplication="1"
      maxConcurrentRequestsPerProcess="1024"
      maxNamedPipeConnectionRetry="100"
      namedPipeConnectionRetryDelay="250"
      asyncCompletionThreadCount="0"
      initialRequestBufferSize="4096"
      maxRequestBufferSize="65536"
      uncFileChangesPollingInterval="5000"
      gracefulShutdownTimeout="60000"
      enableXFF="true">
      
      <!-- Environment variables for PostgreSQL -->
      <environmentVariables>
        <add name="NODE_ENV" value="production" />
        <add name="DB_TYPE" value="postgresql" />
        <add name="DATABASE_URL" value="postgresql://app_user:Xman@123@localhost:5432/freelancing_platform" />
        <add name="PGHOST" value="localhost" />
        <add name="PGPORT" value="5432" />
        <add name="PGUSER" value="app_user" />
        <add name="PGPASSWORD" value="Xman@123" />
        <add name="PGDATABASE" value="freelancing_platform" />
        <add name="PGSSLMODE" value="disable" />
        <add name="SESSION_SECRET" value="freelance_platform_secret_2024" />
        <add name="REPL_ID" value="freelance-platform" />
        <add name="REPLIT_DOMAINS" value="localhost" />
      </environmentVariables>
    </iisnode>

    <!-- Error pages -->
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="index.html" responseMode="ExecuteURL" />
    </httpErrors>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>

    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <!-- Static content caching -->
  </system.webServer>


</configuration>