<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <!-- Node.js application handler -->
      <add name="iisnode" path="dist/index.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- Static file MIME types -->
    <staticContent>
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".mjs" mimeType="application/javascript" />
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
      <mimeMap fileExtension=".wasm" mimeType="application/wasm" />
      <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      <mimeMap fileExtension=".woff" mimeType="font/woff" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
    </staticContent>

    <!-- Default documents -->
    <defaultDocument>
      <files>
        <clear />
        <add value="dist/public/index.html" />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Directory browsing disabled -->
    <directoryBrowse enabled="false" />

    <rewrite>
      <rules>
        <!-- API routes - direct to Node.js -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="dist/index.js" />
        </rule>

        <!-- Static assets - serve directly with proper MIME types -->
        <rule name="Static Assets" stopProcessing="true">
          <match url="^assets/(.*)" />
          <action type="Rewrite" url="dist/public/assets/{R:1}" />
        </rule>

        <!-- Static files from dist/public - serve directly -->
        <rule name="Static Files" stopProcessing="true">
          <match url="^dist/public/(.*)" />
          <action type="None" />
        </rule>

        <!-- Root request - serve React app -->
        <rule name="Root to React" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="dist/public/index.html" />
        </rule>

        <!-- All other routes - serve index.html for React Router -->
        <rule name="React Router">
          <match url="(.*)" />
          <conditions logicalGrouping="MatchAll">
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/assets/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/dist/" negate="true" />
          </conditions>
          <action type="Rewrite" url="dist/public/index.html" />
        </rule>
      </rules>
    </rewrite>

    <!-- iisnode configuration -->
    <iisnode 
      nodeProcessCommandLine="C:\Program Files\nodejs\node.exe"
      interceptor="C:\Program Files\iisnode\interceptor.js"
      promoteServerVars="LOGON_USER,AUTH_USER,AUTH_TYPE"
      loggingEnabled="true"
      logDirectory="logs"
      debuggingEnabled="false"
      maxProcessCountPerApplication="1"
      maxConcurrentRequestsPerProcess="1024"
      maxNamedPipeConnectionRetry="100"
      namedPipeConnectionRetryDelay="250"
      asyncCompletionThreadCount="0"
      initialRequestBufferSize="4096"
      maxRequestBufferSize="65536"
      uncFileChangesPollingInterval="5000"
      gracefulShutdownTimeout="60000"
      enableXFF="true"
    />

    <!-- Error pages -->
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" path="dist/index.html" responseMode="ExecuteURL" />
    </httpErrors>

    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>

    <!-- Compression -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />

    <!-- Static content caching -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>
  </system.webServer>

  <!-- Application settings -->
  <appSettings>
    <add key="NODE_ENV" value="production" />

    <!-- Database Configuration -->
    <add key="DB_TYPE" value="sqlserver" />
    <add key="SQL_SERVER_HOST" value="%SQL_SERVER_HOST%" />
    <add key="SQL_SERVER_USER" value="%SQL_SERVER_USER%" />
    <add key="SQL_SERVER_PASSWORD" value="%SQL_SERVER_PASSWORD%" />
    <add key="SQL_SERVER_DATABASE" value="FreelancingPlatform" />
    <add key="SQL_SERVER_PORT" value="1433" />

    <!-- Alternative PostgreSQL Configuration -->
    <!-- <add key="DB_TYPE" value="postgresql" /> -->
    <!-- <add key="DATABASE_URL" value="%DATABASE_URL%" /> -->

    <!-- Session Configuration -->
    <add key="SESSION_SECRET" value="%SESSION_SECRET%" />

    <!-- Authentication Configuration -->
    <add key="REPL_ID" value="%REPL_ID%" />
    <add key="REPLIT_DOMAINS" value="%REPLIT_DOMAINS%" />
    <add key="ISSUER_URL" value="https://replit.com/oidc" />
  </appSettings>
</configuration>